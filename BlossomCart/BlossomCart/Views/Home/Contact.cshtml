@model BlossomCart.Models.Feedback

@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
	var user = Context.Session.GetString("email");
	var name = Context.Session.GetString("username");
    var Sendfeedback= TempData["Sendfeedback"];
	var mail = @"^[^@\s]+@[^@\s]+\.[^@\s]+$";
}
<title>Blossom cart | Contact</title>


<section class="bg-img1 txt-center p-lr-15 p-tb-92 " style="background-image: url('//images/header-photo-5.jpg'); margin-top:6%; background-color:lightgray;">
	<h1 class="mtext-101 cl2 txt-center" style="font-size:50px; color:crimson;">Feedbacks<span class="mtext-101 cl0 " style="font-size:50px;"> / </span><span class="mtext-101 cl2" style="font-size:50px;">Contact </span></h1>

</section>


<!-- Content page -->
<section class="bg0 p-t-104 p-b-116">
	<div class="container">
		<div class="flex-w flex-tr">
			<div class="size-210 bor10 p-lr-70 p-t-55 p-b-70 p-lr-15-lg w-full-md">
				<form asp-action="Contact">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<h4 class="mtext-105 cl2 txt-center p-b-30">
						Send Us A Feedback
					</h4>
					<span class="mtext-104" style="color:darkgreen;">@Sendfeedback</span>


					<input asp-for="CustomerName" type="hidden" class="form-control" value="@name" />
					
					<div class=" m-b-20 how-pos4-parent">
						<input class="bor8 stext-111 cl2 plh3 size-116 p-l-62 p-r-30" type="email" asp-for="CustomerEmail" placeholder="Your Email Address" value="@user" pattern="@mail" title="E-Mail contains is example123@gmail.com" required>
						<img class="how-pos4 pointer-none" src="/Index/images/icons/icon-email.png" alt="ICON">
						<span asp-validation-for="CustomerEmail" class="text-danger"></span>

					</div>
					
					<div class=" m-b-50">
						
						<textarea class=" bor8 stext-111 cl2 plh3 size-120 p-lr-28 p-tb-25" asp-for="Feedback1" placeholder="Your Feedback?" style="resize:none;" required maxlength="100" minlength="20"></textarea>
						<span asp-validation-for="Feedback1" class="text-danger "style="margin-top:10px"></span>

						
					</div>
						

					<input type="submit" class="flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer" value="Submit"/>
						
					
				</form>
			</div>

			<div class="size-210 bor10 flex-w flex-col-m p-lr-93 p-tb-30 p-lr-15-lg w-full-md">
				<div class="flex-w w-full p-b-42">
					<span class="fs-18 cl5 txt-center size-211">
						<span class="lnr lnr-map-marker"></span>
					</span>

					<div class="size-212 p-t-2">
						<span class="mtext-110 cl2">
							Address
						</span>

						<p class="stext-115 cl6 size-213 p-t-18">
							BlossomCart Center 7th Floor, SD-1, Block A North Nazimabad Town, Karachi, 74700
						</p>
					</div>
				</div>

				<div class="flex-w w-full p-b-42">
					<span class="fs-18 cl5 txt-center size-211">
						<span class="lnr lnr-phone-handset"></span>
					</span>

					<div class="size-212 p-t-2">
						<span class="mtext-110 cl2">
							Lets Talk
						</span>

						<p class="stext-115 cl1 size-213 p-t-18">
							+92 322 2062319
						</p>
					</div>
				</div>

				<div class="flex-w w-full">
					<span class="fs-18 cl5 txt-center size-211">
						<span class="lnr lnr-envelope"></span>
					</span>

					<div class="size-212 p-t-2">
						<span class="mtext-110 cl2">
							Sale Support
						</span>

						<p class="stext-115 cl1 size-213 p-t-18">
							blossomcart@gmail.com
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


<!-- Map -->
<div class="map">
	<div>
		<iframe src="https://www.google.com/maps/embed?pb=!1m16!1m12!1m3!1d57886.22271247371!2d66.99563463621841!3d24.93585376907531!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!2m1!1sSD-1%2C%20Block%20A%20North%20Nazimabad%20Town%2C%20Karachi%2C%2074700!5e0!3m2!1sen!2s!4v1724536898355!5m2!1sen!2s" class="size-303" style="width:100%;" id="google_map" data-map-x="40.691446" data-map-y="-73.886787" data-pin="~/Index/images/icons/pin.png" data-scrollwhell="0" data-draggable="1" data-zoom="11"   loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
	</div>
</div>

