@using System.Collections

@model BlossomCart.Models.Bouquet 




@{
	
	ViewData["Title"] = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
	var cart = ViewBag.Cart as BlossomCart.Models.Cart;
	int userID = Convert.ToInt32(Context.Session.GetInt32("id"));

	var user = Context.Session.GetString("email");
	var name = Context.Session.GetString("username");
}

<title>Blossom cart | Details</title>


<!-- breadcrumb -->



<!-- Product Detail -->
<section class="sec-product-detail bg0 p-t-65 p-b-60">
	<div class="container">
		<a href="#" class="logo">
			<h1 class="mtext-103 cl2" style="font-size:50px; margin-top:5%; color:crimson;">Bouquets <span class="mtext-103 cl2" style="font-size:50px;"> Details </span></h1>
		</a>
		<hr/>
		<div class="row my-5">
			<div class="col-md-6 col-lg-7 p-b-30" >
				<div class="p-l-25 p-r-30 p-lr-0-lg">
					<div class="wrap-slick3 flex-sb flex-w">
						<div class="wrap-slick3-dots"></div>
						<div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

						<div class="slick3 gallery-lb">





							<div class="item-slick3" data-thumb="    @Html.DisplayFor(model => model.Image)">
								<div class="wrap-pic-w pos-relative">
									<img src="    @Html.DisplayFor(model => model.Image)" alt="IMG-PRODUCT">

									<a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="    @Html.DisplayFor(model => model.Image)">
										<i class="fa fa-expand"></i>
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="col-md-6 col-lg-5 p-b-30 my-5">
				<div class="p-r-50 p-t-5 p-lr-0-lg">
					<h4 class="mtext-103 cl2" style="color:crimson; font-size:30px; ">
						Bouquet Name
					</h4>
					<span class="mtext-104 cl2" style=" font-size:30px;">
						@Html.DisplayFor(model => model.BouquetName)

					</span>
					<hr />
					<h4 class="mtext-103 cl2" style="color:crimson; font-size:30px; ">
						Price
					</h4>
					<span class="mtext-104 cl2" style=" font-size:30px;">
						@Html.DisplayFor(model => model.Price)<span style="color:darkgreen;">
							PKR
						</span>

					</span>
					<hr />
					<h4 class="mtext-103 cl2" style="color:crimson; font-size:30px; ">
						Category
					</h4>
					<span class="mtext-104 cl2" style=" font-size:30px;">
						@Html.DisplayFor(model => model.CategoryId)
					</span>

					</span>
					<hr />


					

					<!--  -->
					
						

						
					<form asp-action="AddtoCart">
						<input type="hidden" asp-for="@cart.BouquetId" value="@Model.BouquetId" />
						<input type="hidden" asp-for="@cart.UserId" value="@userID" />
						<input type="hidden" asp-for="@cart.Price" value="@Model.Price" />
								<div class="wrap-num-product flex-w m-r-20 m-tb-10">
									<div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
										<i class="fs-16 zmdi zmdi-minus"></i>
									</div>

							<input class="mtext-104 cl3 txt-center num-product" type="number" asp-for="@cart.Qty" value="1" min="1" max="20">

									<div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
										<i class="fs-16 zmdi zmdi-plus"></i>
									</div>
								</div>

								<button class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail">
									Add to cart
								</button>
					</form>
							</div>
						

					<!--  -->
				
				</div>
			</div>
		</div>

		<div class="bor10 m-t-50 p-t-43 p-b-40">
			<!-- Tab01 -->
			<div class="tab01">
				<!-- Nav tabs -->
				<ul class="nav nav-tabs" role="tablist">
					<li class="nav-item p-b-10">
						<a class="nav-link active" data-toggle="tab" href="#description" role="tab">Description</a>
					</li>

					
				</ul>

				<!-- Tab panes -->
				<div class="tab-content p-t-43">
					<!-- - -->
					<div class="tab-pane fade show active" id="description" role="tabpanel">
						<div class="how-pos2 p-lr-15-md">
							<p class="stext-102 cl6">
							@Html.DisplayFor(model => model.BouquetDescription)
						</p>
						</div>
					</div>
					</div>

					<!-- - -->
					

					<!-- - -->
					

	<div class="bg6 flex-c-m flex-w size-302 m-t-73 p-tb-15">
		<span class="stext-107 cl6 p-lr-25">
			SKU: JAK-01
		</span>

		<span class="stext-107 cl6 p-lr-25">
			Categories: Jacket, Men
		</span>
	</div>
</section>


<!-- Related Products -->
<section class="sec-relate-product bg0 p-t-45 p-b-105">
	<div class="container">
		<div class="p-b-45">
			<h3 class="ltext-106 cl5 txt-center">
				Related Products
			</h3>
		</div>

		<!-- Slide2 -->
		<div class="wrap-slick2">
			<div class="slick2">


				
				<partial name="FeatureProducts" />
					
				
			</div>
		</div>
	</div>
</section>



