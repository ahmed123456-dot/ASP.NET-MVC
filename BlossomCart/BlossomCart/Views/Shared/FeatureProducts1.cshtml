@{
    BlossomCart.Models.BlossomCartsContext db = new BlossomCart.Models.BlossomCartsContext();
}



@foreach (var item in db.Bouquets.Take(4).OrderByDescending(o => o.BouquetId))
{
	if(item.Status==1){
	<li class="flex-w flex-t p-b-30">
		<a href="#" class="wrao-pic-w size-214 hov-ovelay1 m-r-20">
			<img src="@item.Image" alt="PRODUCT" style="width:80px;height:80px;">
		</a>

		<div class="size-215 flex-col-t p-t-8">
			<a href="#" class="stext-116 cl8 hov-cl1 trans-04">
				@item.BouquetName
			</a>

			<span class="stext-116 cl6 p-t-20">
				@item.Price
			</span>
		</div>
	</li>
}
}
