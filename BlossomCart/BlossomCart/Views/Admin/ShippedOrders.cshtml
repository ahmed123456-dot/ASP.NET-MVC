@model BlossomCart.ViewModels.CategoryIsotopeViewModel

@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<title>Admin-ShippedOrders</title>

<section class="bg-img1 txt-center  p-lr-15 p-tb-92  " style="background-image: url('/Admin/images/Admin.jpg'); margin-top:8%;">
    <h2 class="ltext-105 cl0 txt-center ">
        Admin Panel
    </h2>
    <ol class="txt-center justify-content-center mb-0 my-3">
        <a asp-action="ShippedOrders" asp-controller="Admin" class=" mtext-102  text-center " style=" font-size:20px;">Delveries Orders</a>
        <a asp-action="Orders" asp-controller="Admin" class="mtext-102 cl0 text-center" style=" font-size:20px;">/ Pending Orders</a>
    </ol>
</section>
<div class="container my-5">
    <h6 class="mtext-103 cl2" style="font-size:50px; color:darkgreen;">Shipped <span class="mtext-103 cl2" style="font-size:50px; margin-top:13%; ">Orders</span></h6>


    <table class="table my-3">
        <thead>
            <tr>
                <th class="mtext-104 cl2" style="color:crimson">
                    Order Id
                </th>
                <th class="mtext-104 cl2" style="color:crimson">
                    Order Date
                </th>

                <th class="mtext-104 cl2" style="color:crimson">
                    Price
                </th>

                <th class="mtext-104 cl2" style="color:crimson">
                    Status
                </th>
                <th class="mtext-104 cl2" style="color:crimson">
                    Payment Type
                </th>
                <th class="mtext-104 cl2" style="color:crimson">
                   
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products1.OrderByDescending(o => o.OrderId))
            {
                
                    <tr>
                    @if (item.Status == "Shipped")
                    {
                        <td>
                            @item.OrderId
                        </td>
                        <td>
                            @item.OrderDate
                        </td>
                        <td>
                            @item.Price
                        </td>
                        <td>
                            @item.Status
                        </td>
                        <td>
                            @item.PaymentType
                        </td>


                        <td>
                            <a  class="mtext-103" style="color:darkgreen;">Shipped SuccessFully</a> 

                            
                        </td>
                        }
                    </tr>
                
            }
        </tbody>
    </table>
    <hr />
    <div class=" my-5">
        <nav>
            <ul class="pagination  justify-content-center">
                @if (Model.Pager.CurrentPage > 1)
                {
                    <li class="page-item ">

                        @Html.ActionLink("Pervious", "ShippedOrders", new { page = Model.Pager.CurrentPage - 1 }, new { @class = "flex-c-m stext-101 cl0 size-107 bg7  hov-btn3  trans-04 m-b-10" })
                    </li>
                }


                @for (int i = 1; i <= Model.Pager.TotalPages; i++)
                {
                    if (i == Model.Pager.CurrentPage)
                    {
                        <li class="page-item">
                            <span class="flex-c-m stext-101 cl0 size-108   hov-btn3  trans-04 m-b-10" style="background-color:crimson;">@i</span>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            @Html.ActionLink(i.ToString(), "ShippedOrders", new { page = i }, new { @class = "flex-c-m stext-101 cl0 size-108 bg7  hov-btn3  trans-04 m-b-10" })
                        </li>
                    }
                }

                @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                {
                    <li class="page-item">
                        @Html.ActionLink("Next", "ShippedOrders", new { page = Model.Pager.CurrentPage + 1 }, new { @class = "flex-c-m stext-101 cl0 size-107 bg7  hov-btn3  trans-04 m-b-10" })
                    </li>
                }

            </ul>
        </nav>
    </div>
</div>
