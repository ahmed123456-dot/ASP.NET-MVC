			<!-- Product -->
			<div class="col-md-18 col-lg-9 bg0 m-t-23 p-b-140">

				<div class="w-50">


					<div class="flex-c-m stext-106 cl6 size-105 bor4 pointer hov-btn3 trans-04 m-tb-4 js-show-search">
						<i class="icon-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-search"></i>
						<i class="icon-close-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
						Search
					</div>
				</div>

				<!-- Search product -->
				<form action="@Url.Action("Search", "Shop")" method="get">


					<div class="dis-none panel-search w-full p-t-10 p-b-15">
						<div class="bor8 dis-flex p-l-15">
							<button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04" type="submit">
								<i class="zmdi zmdi-search"></i>
							</button>

							<input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="query" placeholder="Search">
						</div>
					</div>
				</form>




				<div class="row isotope-grid ">
					@if (Model.Bouquets != null && Model.Bouquets.Any())
					{
						@foreach (var bouquet in Model.Bouquets.OrderByDescending(b => b.BouquetId).Take(6))
						{
							if (bouquet.Status == 1)
							{
								<div class="col-sm-6 col-md-4 col-lg-5 p-b-35 isotope-item women">
									<!-- Block2 -->
									<div class="block2">
										<div class="block2-pic hov-img0">
											<img src="@bouquet.Image" alt="IMG-PRODUCT">

											<a asp-action="Details" asp-route-id="@bouquet.BouquetId" asp-controller="Home" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 ">
												Quick View
											</a>
										</div>

										<div class="block2-txt flex-w flex-t p-t-14">
											<div class="block2-txt-child1 flex-col-l ">
												<a href="product-detail.html" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
													@bouquet.BouquetName
												</a>

												<span class="stext-105 cl3">
													@bouquet.Price PKR
												</span>
											</div>

											<div class="block2-txt-child2 flex-r p-t-3">
												<a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
													<img class="icon-heart1 dis-block trans-04" src="~/Index/images/icons/icon-heart-01.png" alt="ICON">
													<img class="icon-heart2 dis-block trans-04 ab-t-l" src="~/Index/images/icons/icon-heart-02.png" alt="ICON">
												</a>
											</div>
										</div>
									</div>
								</div>
							}
						}
					}
					else if (Model.Bouquets == null)
					{
						<p>Please select a category to view products.</p>
					}
					else
					{
						<div class="flex-c-m flex-w w-full p-t-45 my-5">
							<h1>No products available for this category.</h1>
							<a asp-action="Categories" asp-route-id=null class=" my-5 w-50 flex-c-m flex-w w-full stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
								All Products
							</a>
						</div>

					}



					
				</div>

				<div class=" my-5">
					<nav>
						<ul class="pagination  justify-content-center">
					@if (Model.CurrentPage > 1)
					{
						<li class="page-item">
									@Html.ActionLink("Pervious", "Categories", new { id = ViewBag.SelectedCategoryId, page = Model.CurrentPage - 1, pageSize = Model.PageSize }, new { @class = "flex-c-m stext-101 cl0 size-107 bg7  hov-btn3  trans-04 m-b-10" })
						</li>
					}

					@for (int i = 1; i <= Model.TotalPages; i++)
					{
						if (i == Model.CurrentPage)
						{
							<li class="page-item">
								<span class="flex-c-m stext-101 cl0 size-108   hov-btn3  trans-04 m-b-10" style="background-color:crimson;">@i</span>
							</li>
						}
						else
						{
							<li class="page-item">
								@Html.ActionLink(i.ToString(), "Categories", new { page = i }, new { @class = "flex-c-m stext-101 cl0 size-108 bg7  hov-btn3  trans-04 m-b-10" })
							</li>
						}
					}

					@if (Model.CurrentPage < Model.TotalPages)
					{
						<li class="page-item">
									@Html.ActionLink("Next", "Categories", new { id = ViewBag.SelectedCategoryId, page = Model.CurrentPage + 1, pageSize = Model.PageSize }, new { @class = "flex-c-m stext-101 cl0 size-107 bg7  hov-btn3  trans-04 m-b-10" })
						</li>
					}
				</div>
				</ul>
				</nav>
			</div>

